{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "turbo run postinstall",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean": "find . -name node_modules -o -name .next -o -name .turbo -type d -prune | xargs rm -rf",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web": "pnpm --filter nextjs",
    "db": "pnpm --filter db",
    "api": "pnpm --filter api",
    "ext": "pnpm --filter extension",
    "prisma": "pnpm --filter db exec prisma",
    "ts-to-zod": "pnpm --filter extension exec ts-to-zod"
  },
  "devDependencies": {
    "eslint-config-agreeto": "workspace:*",
    "eslint": "^8.26.0",
    "husky": "^4.3.8",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tsc-files": "^1.1.3",
    "turbo": "latest",
    "@agreeto/tsconfig": "workspace:*",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "tsc-files --noEmit --pretty",
      "eslint --fix --debug",
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx}": [
      "tsc-files --noEmit --pretty",
      "eslint --fix --debug",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix --debug"
    ],
    "*.json": [
      "prettier --write"
    ],
    "packages/db/prisma/schema.prisma": [
      "prisma format"
    ]
  }
}
