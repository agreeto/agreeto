{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "turbo run postinstall",
    "pre-commit": "lint-staged",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean": "find . -name node_modules -o -name .next -o -name .turbo -type d -prune | xargs rm -rf",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web": "pnpm --filter nextjs",
    "db": "pnpm --filter db",
    "api": "pnpm --filter api",
    "ext": "pnpm --filter extension",
    "prisma": "pnpm --filter db exec prisma",
    "ts-to-zod": "pnpm --filter extension exec ts-to-zod"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "packages/db/prisma/schema.prisma": [
      "prisma format"
    ]
  }
}
