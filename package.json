{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "clean": "find . -name node_modules -o -name .next -o -name .turbo -type d -prune | xargs rm -rf",
    "db-generate": "turbo db-generate",
    "db-push": "turbo db-push",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ts-to-zod": "pnpm --filter extension exec ts-to-zod"
  },
  "dependencies": {
    "eslint-config-agreeto": "workspace:*",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tsc-files": "^1.1.3",
    "turbo": "^1.6.2",
    "@agreeto/tsconfig": "workspace:*",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "eslint --fix --debug",
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx}": [
      "eslint --fix --debug",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix --debug"
    ],
    "*.json": [
      "prettier --write"
    ],
    "packages/db": [
      "prisma format"
    ]
  }
}
