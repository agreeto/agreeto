{
  "name": "@agreeto/extension",
  "displayName": "Extension",
  "version": "0.0.0",
  "description": "AgreeTo Chrome Extension.",
  "author": "richardpoelderl",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@agreeto/api": "workspace:*",
    "@agreeto/auth": "workspace:*",
    "@fullcalendar/common": "^5.11.3",
    "@fullcalendar/interaction": "^5.11.3",
    "@fullcalendar/react": "^5.11.2",
    "@fullcalendar/timegrid": "^5.11.3",
    "@headlessui/react": "^1.7.3",
    "@heroicons/react": "^2.0.11",
    "@plasmohq/storage": "^0.12.1",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-separator": "^1.0.1",
    "@tanstack/react-location": "^3.7.4",
    "@tanstack/react-query": "^4.13.0",
    "@trpc/client": "10.0.0-rc.2",
    "@trpc/react-query": "10.0.0-rc.2",
    "@trpc/server": "10.0.0-rc.2",
    "date-fns": "^2.29.3",
    "duration": "link:dayjs/plugin/duration",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.6.0",
    "tozod": "^3.0.0",
    "trpc-chrome": "^0.1.0",
    "@agreeto/ui": "workspace:*",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.5.2",
    "@types/chrome": "^0.0.197",
    "@types/node": "^18.11.7",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.7",
    "plasmo": "0.55.0",
    "postcss": "^8.4.14",
    "prettier": "2.7.1",
    "@agreeto/tailwind-config": "workspace:*",
    "tailwindcss": "^3.1.8",
    "ts-to-zod": "^1.13.1",
    "@agreeto/tsconfig": "workspace:*",
    "typescript": "^4.8.4"
  },
  "manifest": {
    "host_permissions": [
      "$PLASMO_PUBLIC_WEB_URL/api/trpc/*"
    ],
    "permissions": [
      "tabs",
      "storage"
    ],
    "externally_connectable": {
      "matches": [
        "https://*.agreeto.app/*",
        "*://localhost/*"
      ]
    }
  }
}
