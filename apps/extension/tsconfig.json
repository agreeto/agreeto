    ".plasmo/**/*",
    "./**/*.ts",
    "./**/*.tsx",
    "node_modules/@agreeto/auth/next-auth.d.ts"
  ],
  "compilerOptions": {
    "paths": {
      "~*": ["./src/*"]
    },
    "baseUrl": ".",
